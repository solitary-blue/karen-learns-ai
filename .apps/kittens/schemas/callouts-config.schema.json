{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Callouts Configuration",
  "type": "object",
  "properties": {
    "callouts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Unique identifier for the callout type"
          },
          "title": {
            "type": "string",
            "description": "Default title for the callout"
          },
          "icon": {
            "type": "string",
            "description": "Lucide icon name"
          },
          "color": {
            "type": "string",
            "description": "Tailwind text color class or hex code for the title"
          },
          "backgroundColor": {
            "type": "string",
            "description": "Tailwind background color class or hex code"
          },
          "borderColor": {
            "type": "string",
            "description": "Tailwind border color class or hex code"
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Alternative names for this callout type"
          }
        },
        "required": ["type", "icon", "color", "backgroundColor", "borderColor"]
      }
    }
  },
  "required": ["callouts"]
}
